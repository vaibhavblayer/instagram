\def\step[#1]{\Times{\textcolor{tomato}{\textbf{\textit{Step-#1.}}}}}
\def\th[#1,#2]{\Times{\textit{$#2^{\textit{#1}}$}}}

\def\duration[#1]{\textcolor{black!65}{$#1\mins$}}
\def\marks[#1]{\textcolor{red!75}{$#1$\addtocounter{marks}{#1}}}

\def\year[#1]{\normalsize{\textcolor{blue-1}{\textls*[100]{{\hspace*{65 mm} [#1] ~ @10xphysics}}}}}

\def\day[#1]{\centering\normalfont\textsf{\Large\textcolor{red}{\lsstyle{\\#1}}}}

\def\documenttitle[color-#1,#2]{\centering\normalfont\textsf{\Large\textcolor{#1}{\lsstyle{#2}}}}

\def\name[#1,#2]{\normalfont\textsf{\Large\textcolor{black!65}{{\lsstyle{#1}} \hfill #2\mins}}}

\def\linesegment[color-#1,(#2,#3) to (#4,#5)]{\centering\tikz\draw[#1](#2,#3)--(#4,#5);}

\def\totalmarks[#1]{\Times\textbf{\textit{\Large\textcolor{red}{\\#1 \hfill \the\value{marks}}}}}
