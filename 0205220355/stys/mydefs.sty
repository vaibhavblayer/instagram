\def\mysurface[#1]#2(#3)#4(#5)#6
{
\fill[pattern=north east hatch, hatch distance=1.8mm, hatch thickness=.65pt] (#3) rectangle ([yshift=-0.2 cm]#5);
\draw[#1] (#3)--(#5);
}

\def\myisurface[#1]#2(#3)#4(#5)#6
{
\fill[pattern=flexible horizontal lines, pattern line width=0.65pt, pattern density=3.25pt ] (#3) rectangle ([xshift=0.2 cm]#5);
\draw[#1] (#3)--(#5);
}


\def\myvsurface[#1]#2(#3)#4(#5)#6
{
\fill[pattern=flexible north west lines, pattern line width=0.65pt, pattern density=5pt] (#3) rectangle ([xshift=0.2 cm]#5);
\draw[#1] (#3)--(#5);
}


\def\mydsurface[#1]#2(#3)#4(#5)#6
{
\fill[pattern=north east hatch, hatch distance=1.8mm, hatch thickness=.65pt] (#3) rectangle ([yshift=0.2 cm]#5);
\draw[#1] (#3)--(#5);
}



